<SelectionScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "Arrastrar Carpeta"
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Seleccionar Carpeta"
            on_release: root.select_folder()
            pos_hint: {"center_x": .5}

        MDLabel:
            text: f"Carpeta seleccionada: {root.selected_folder}"
            halign: "center"

        MDLabel:
            text: f"Imágenes válidas encontradas: {len(root.valid_files)}"
            halign: "center"

        MDRaisedButton:
            text: "Siguiente"
            on_release: root.manager.current = 'config'
            pos_hint: {"center_x": .5}
            disabled: not root.valid_files