<ConfigScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "Configuración del Modelo"
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Cargar Configuración"
            on_release: root.load_config()
            pos_hint: {"center_x": .5}

        MDRaisedButton:
            text: "Siguiente"
            on_release: root.manager.current = 'processing'
            pos_hint: {"center_x": .5}