<ProcessingScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "Procesamiento de ImÃ¡genes"
            halign: "center"
            font_style: "H5"

        MDProgressBar:
            value: root.progress
            max: 100

        MDLabel:
            text: f"Procesando: {root.processed_images} / {root.total_images}"
            halign: "center"

        MDRaisedButton:
            text: "Iniciar Procesamiento"
            on_release: root.start_processing()
            pos_hint: {"center_x": .5}
            disabled: root.progress > 0