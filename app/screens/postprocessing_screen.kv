<PostprocessingScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "Post-procesamiento"
            halign: "center"
            font_style: "H5"

        MDRaisedButton:
            text: "Exportar Resultados"
            on_release: root.export_results()
            pos_hint: {"center_x": .5}

        MDRaisedButton:
            text: "Volver al Inicio"
            on_release: root.manager.current = 'selection'
            pos_hint: {"center_x": .5}