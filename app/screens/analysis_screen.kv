<AnalysisScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: "16dp"
        spacing: "16dp"

        MDLabel:
            text: "Análisis de Resultados"
            halign: "center"
            font_style: "H5"

        MDLabel:
            text: f"Total de imágenes analizadas: {len(root.results)}"
            halign: "center"

        MDLabel:
            text: f"Imágenes con fauna detectada: {sum(1 for r in root.results if r['fauna_detected'])}"
            halign: "center"

        MDRaisedButton:
            text: "Mostrar Resultados Detallados"
            on_release: root.show_results()
            pos_hint: {"center_x": .5}

        MDRaisedButton:
            text: "Siguiente"
            on_release: root.manager.current = 'postprocessing'
            pos_hint: {"center_x": .5}